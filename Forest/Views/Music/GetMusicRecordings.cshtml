@model IEnumerable<Forest.Data.BEANS.MusicBEAN>

@{
    ViewBag.Title = "GetMusicRecordings";
}

<h2>GetMusicRecordings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_Tracks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Released)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_Tracks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock_Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Released)
        </td>
        <td>
            <a href=@Url.Action("EditMusicRecording", new { id=item.Id, controller = "MusicAdmin" })>
                <img src="~/Content/Images/edit.png" alt="Edit" style="height:30px;width:70px" />
            </a> |
            @*<button class="btn" a href=@Url.Action("EditMusicRecording", new { id=item.Id, controller = "MusicAdmin" })>Edit</button> |*@
            <a href= @Url.Action("Recording", new { id = item.Id, })>
                <img src="~/Content/Images/details.png" alt="Details" style="height:30px;width:80px" /></a> |
            @*<button class="btn" a href=@Url.Action("Recording", new { id=item.Id, })>Details</button> |*@
            <a href= @Url.Action("DeleteMusicRecording", new { id = item.Id, })>
                <img src="~/Content/Images/delete.png" alt="Delete" style="height:30px;width:80px" /></a> |
            @*<button class="btn" a href=@Url.Action("DeleteMusicRecording", new { id=item.Id, })>Delete</button> |*@

</td>
    </tr>
