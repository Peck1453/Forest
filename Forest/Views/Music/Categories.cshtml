@model IEnumerable<Forest.Data.Music_Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "AddMusicGenre", new {controller = "MusicAdmin" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Genre)*@
            @Html.ActionLink(item.Genre, "Recordings", new { genre = item.Id })
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMusicCategory", new { id = item.Id, controller = "MusicAdmin" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteMusicGenre", new { id=item.Id, controller = "MusicAdmin" })   |
            @Html.ActionLink("Add Music","AddMusicRecording", new {genre = item.Genre,controller = "MusicAdmin" })
        </td>
    </tr>
}

</table>
